<div>
    
    <div class="waiting mb-4">

        <h2 class="white text-left mb-4">Waiting to be Devoured</h2>
        {{#each burgers}} 
          {{#unless this.devoured}}
            <form action="/burgers/eat/{{id}}" method="POST">
                <div class="input-group">
                    <li class="form-control">{{burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="btn" type="submit">DEVOUR</button>
                    </span>
                </div>
            </form>
          {{/unless}} 
        {{/each}}

    </div>

    <div class="devoured">
        
        <h2 class="white text-left mb-4">Devoured</h2>
        {{#each burgers}} 
          {{#if this.devoured}}
            <div class="input-group">
                <li class="form-control">{{this.burger_name}}</li>
            </div>
          {{/if}} 
        {{/each}}

    </div>

</div>
